
%--------------------------------------------------------------------------
    [tmp,NMD.str.main]=system('pwd');
%--------------------------------------------------------------------------

%--------------------------------------------------------------------------
    NMD.alloy_conc = 0.5;
%--------------------------------------------------------------------------
    NMD.mass(1) = 1.0; NMD.mass(2) = 3.0; NMD.NUM_ATOMS_TYPE = 2;
    NMD.vm =...
        ( (1-NMD.alloy_conc)*NMD.mass(1) + NMD.alloy_conc*NMD.mass(2) );
%--------------------------------------------------------------------------

NMD.walltime.lammps = 24; NMD.cpu.lammps = 1; 
NMD.walltime.matlab = 24; NMD.cpu.matlab = 1; NMD.mem.matlab = 2;

%--------------------------------------------------------------------------
    NMD.Nx = 4; NMD.Ny = 4; NMD.Nz = 4;
%--------------------------------------------------------------------------
    NMD.seed.alloy = 1;
    NMD.seed.initial = 1:10;
%--------------------------------------------------------------------------

%SED PARAMETERS------------------------------------------------------------    

%ISEED---------------------------------------------------------------------
    NMD.NUM_SEEDS = size(NMD.seed.initial,2);
%--------------------------------------------------------------------------   

%---IKSLICE----------------------------------------------------------------
    NMD.NUM_KSLICES = 8;
%--------------------------------------------------------------------------   

%TIMES---------------------------------------------------------------------
    NMD.t_total = 2^19; NMD.t_fft = 2^19; NMD.t_step = 2^5; NMD.dt = 0.002;
%--------------------------------------------------------------------------   

NMD.strucutre = 'alloy';


NMD = nmd_alloy_structure_create( NMD );

%GULP

NMD = nmd_alloy_gulp_submit(NMD);

save('NMD.mat')

%LAMMPS

nmd_alloy_lmp_submit(NMD);

save('NMD.mat')


%MATLAB

NMD = nmd_alloy_matlab_submit(NMD);

NMD = nmd_alloy_matlab_clean(NMD);

NMD = nmd_alloy_matlab_average(NMD);

save('NMD_FINISHED.mat')


%NMD.SED








