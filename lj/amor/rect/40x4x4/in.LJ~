label loop_a
variable a loop 5
variable seed index 55555 66666 77777 88888 99999 
clear

# Lennard-Jones Melt
#------------Prepare Geometry---------------------------------------------------------------
units			lj
atom_style		atomic
read_data		in.data
#------------Initialize Structure-----------------------------------------------------------
#mass           	1  1.0
#group         	Ar type = 1
#------------LJ Potentials------------------------------------------------------------------
pair_style		lj/cut 2.5
pair_coeff		* * 1.0 1.0
pair_modify          	shift yes
#pair_modify   	tail no
#------------Variables----------------------------------------------------------------------
#------------LJ Parameters
variable    	kB 		equal 1.3806504e-23 	# [J/K] Boltzmann
variable	sigma_Ar 	equal 3.4e-10 		# m
variable	eps_Ar		equal 1.67e-21		# J
variable	mass_Ar		equal 6.63e-26		# kg
variable	tau_Ar		equal 2.1423e-12	# s
#------------thermo Parameters
variable    	T_melt 	equal 300*(${kB}/${eps_Ar})
variable	T_0K		equal 0.00001
variable	T_2_5K		equal 2.5*(${kB}/${eps_Ar})
variable	T_5K		equal 5*(${kB}/${eps_Ar})
variable	T_10K		equal 10*(${kB}/${eps_Ar})
variable	T_15K		equal 15*(${kB}/${eps_Ar})

variable   	dt 		equal 0.002
variable	quench_rate	equal 1.0
variable	quench_length equal 10000
#------------kappa parameters
variable    	p 		equal 1000 		# correlation length
variable    	s 		equal 5  		# sample interval
variable    	d 		equal $p*$s 		# dump interval 



log log_main_${a}.lammps

#------------ NVT RUN -----------------------------------------------------------------------
	velocity		all create ${T_melt} ${seed} dist gaussian mom yes
	fix 			1 all nvt temp ${T_melt} ${T_melt} 10.0
	thermo_style  	custom step temp press etotal pe ke vol xlo xhi ylo yhi zlo zhi
	thermo			500
	timestep		${dt}
	run			250000
#	run			2500
	unfix 			1

#------------ NVE quench ---------------------------------------------------------------------
	fix 			1 all nve
	fix 			2 all temp/rescale 1 ${T_melt} ${T_0K} 0.01 1.0
	thermo_style  	custom step temp press etotal pe ke vol
	thermo			10
#	run			${quench_length}
	run			100
	unfix 			1 
	unfix 			2

#------------ NPT Relax -----------------------------------------------------------------------
	fix 			1 all npt temp ${T_5K} ${T_5K} 1.0 iso 0.0 0.0 1.0
	thermo_style  	custom step temp press etotal pe ke vol xlo xhi ylo yhi zlo zhi
	thermo			1000
	run			100000
#	run			1000
	unfix 			1

#------------ NPT Anneal -----------------------------------------------------------------------
	fix 			1 all npt temp ${T_15K} ${T_15K} 1.0 iso 0.0 0.0 1.0
	compute 		myDis all msd 
	thermo_style  	custom step temp press etotal pe ke vol xlo xhi ylo yhi zlo zhi c_myDis[4]
	thermo			1000
	run			250000
#	run			1000
	uncompute 		myDis
	unfix 			1

#------------ NPT Quench -----------------------------------------------------------------------
	fix 			1 all npt temp ${T_15K} ${T_0K} 1.0 iso 0.0 0.0 1.0
#	compute 		rdf all rdf 100
#	fix 			rdf all ave/time 1000 100 10000 c_rdf file npt_quench.rdf mode vector
	thermo_style  	custom step temp press etotal pe ke vol xlo xhi ylo yhi zlo zhi
	thermo			1000
	run			100000
#	run			10000
#	unfix 			rdf
#	uncompute 		rdf
	unfix 			1

#------MIN ENERGY---------------------------------------------------------------------------
	fix 			1 all box/relax iso 0.0 vmax 0.001
	minimize 		0 1e-6 1000 10000
	unfix 			1
#------DUMP POS---------------------------------------------------------------------------
	fix			1 all nve
	dump 			min all custom 1 quenched_annelead_${a}.pos x y z
	dump_modify 		min sort id
	run			1
	undump 		min
	unfix 			1

variable T_run equals ${T_10K}

log 	log_quench_${a}.lammps

#------------ NPT Heat -----------------------------------------------------------------------
	reset_timestep  	0
	fix 			1 all npt temp ${T_run} ${T_run} 10.0 iso 0.0 0.0 10.0
	compute 		myDis all msd 
#----------Calculate Avg Cell Size-----------------------------------------------------------	
	variable  		myLx equal xhi-xlo
	fix 			myLx all ave/time 100 10 1000 v_myLx file Lx_${a}.profile
	variable		myLx2 equal f_myLx
	thermo_style  	custom step temp press etotal pe ke vol xlo xhi ylo yhi zlo zhi c_myDis[4]
	thermo			1000
	run			500000
#	run			100000
	unfix 			1
	fix 			deform all deform 1 x final 0.0 ${myLx2} y final 0.0 ${myLx2} z final 0.0 ${myLx2} units box
	run			1000
	unfix			deform
	unfix			myLx	
	uncompute 		myDis

#------------ NVE rescale ---------------------------------------------------------------------	
	fix 			1 all nve
	fix 			2 all temp/rescale 1 ${T_run} ${T_run} 0.01 1.0
	timestep		${dt}
	thermo_style  	custom step temp press etotal vol
	thermo			1000
	run             	250000	
#	run             	1000
	unfix 			1
	unfix 			2

#------------ NVE -----------------------------------------------------------------------------	

	fix 			1 all nve
	timestep		${dt}
	compute 		myDis all msd 
	thermo_style  	custom step temp press etotal pe ke vol xlo xhi ylo yhi zlo zhi c_myDis[4]
	thermo			1000
	run             	250000	
#	run             	10000
	unfix 			1
	uncompute 		myDis

#------------ kappa -------------------------------------------------------------------------
log 	log_kappa$a.lammps
	reset_timestep  	0
	fix 			1 all nve
	compute   		myKE all ke/atom
	compute   		myPE all pe/atom
	compute   		myStress all stress/atom virial
	compute   		flux all heat/flux myKE myPE myStress
	variable  		Jx equal c_flux[1]/vol
	variable  		Jy equal c_flux[2]/vol
	variable  		Jz equal c_flux[3]/vol
	fix       		JJ all ave/correlate $s $p $d c_flux[1] c_flux[2] c_flux[3] type auto file J0Jt_$a.dat ave running
#	fix       		JJ all ave/correlate $s $p $d c_flux[1] c_flux[2] c_flux[3] type auto ave running
#	dump			JJ all custom 1000000 J0Jt.dat f_JJ[3] f_JJ[4] f_JJ[5]
	compute 		myDis all msd 
	thermo_style 		custom step temp press vol c_myDis[4] v_Jx v_Jy v_Jz 
	thermo			1000
	timestep		${dt}
	run			2000000
#	run			10000
	unfix			1
	uncompute		myKE
	uncompute		myPE
	uncompute		myStress
	uncompute		flux
	uncompute		myDis
	unfix			JJ

next seed
next a
jump in.LJ loop_a
